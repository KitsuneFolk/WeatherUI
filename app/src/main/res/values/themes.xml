<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!--  Needed for Bottom Navigation Menu selected item color  -->
        <item name="colorSecondaryContainer">@android:color/white</item>
        <!--  Needed for Back arrow color  -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:navigationBarColor">?colorPrimary</item>

        <!-- The amount of dimming when fragment is being dragged. -->
        <item name="fgl_scrim_amount">0.6</item>
        <!-- How much the underneath fragment will be shifted. -->
        <item name="fgl_parallax_factor">1.15</item>
        <!-- This overrides the duration of swipe animation using `navController.navigate(...)` and `navController
        .popBackStack()` methods.-->
        <item name="fgl_anim_duration">600</item>
        <!-- This overrides the elevation applied to the fragment view.-->
        <item name="fgl_elevation">0dp</item>

        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>

    <style name="BlueTheme" parent="BaseTheme">
        <item name="android:colorBackground">@color/BlueTheme_colorBackground</item>
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:colorBackground">@color/DarkTheme_colorBackground</item>
        <item name="colorPrimary">@color/DarkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/DarkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/DarkTheme_colorAccent</item>
        <item name="android:textColorSecondary">@color/DarkTheme_textColorSecondary</item>
    </style>

    <style name="RedTheme" parent="BaseTheme">
        <item name="android:colorBackground">@color/RedTheme_colorBackground</item>
        <item name="colorPrimary">@color/RedTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/RedTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/RedTheme_colorAccent</item>
        <item name="android:textColorSecondary">@color/RedTheme_textColorSecondary</item>

    </style>

    <style name="PurpleTheme" parent="BaseTheme">
        <item name="android:colorBackground">@color/PurpleTheme_colorBackground</item>
        <item name="colorPrimary">@color/PurpleTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/PurpleTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/PurpleTheme_colorAccent</item>
        <item name="android:textColorSecondary">@color/PurpleTheme_textColorSecondary</item>

    </style>

</resources>